{% extends 'basePdf.html.twig' %}

{% block body %}
	{# Affichage des r√©sultats#}
	<div>
		<h4 style='text-align: center'>Listes des transactions du <span>{{startDate |date('d/m/y')}}</span> au <span>{{endDate |date('d/m/y')}}</span></h4>
		<div>
			<h4>Incomes</h4>
			<div>
				<table>
					<thead>
						<tr>
							<th>Date</th>
							<th>Motif</th>
							<th>Amount</th>
						</tr>
					</thead>
					<tbody>
						{% for income in incomes %}
							<tr>
								<td>{{income.executedAt|date('d-m-Y')}}</td>
								<td>{{income.motif}}</td>
								<td>{{income.amount}}</td>
							</tr>
						{% endfor %}
							<tr>
								<td style='font-weight: bold'>Total</td>
								<td></td>
								<td style='font-weight: bold'>{{totalIncomes}}</td>
							</tr>
					</tbody>
				</table>
			</div>
		</div>
		{# New Row #}
		<div>
			<h4>Outgoing</h4>
			<div>
				<table>
					<thead>
						<tr>
							<th>Date</th>
							<th>Motif</th>
							<th>Amount</th>
						</tr>
					</thead>
					<tbody>
						{% for outcome in outcomes %}
							<tr>
								<td>{{outcome.executedAt|date('d-m-Y')}}</td>
								<td>{{outcome.motif}}</td>
								<td>{{outcome.amount}}</td>
							</tr>
						{% endfor %}
							<tr>
								<td style='font-weight: bold'>Total</td>
								<td></td>
								<td style='font-weight: bold'>{{totalOutcomes}}</td>
							</tr>
					</tbody>
				</table>
			</div>
		</div>
		<div>
			<a href='{{ path('app_search_finances_report') }}' class='btn btn-primary offset-10 col-2'>Download</a>
		</div>
	</div>
{% endblock %}