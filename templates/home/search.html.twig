{% extends 'base.html.twig' %}

{% block main %}
{# Formulaire de recherche #}
	{{ form_start(search_Form) }}
	<div class='container'>
		<div class='row'>
			<div class='col-3'>
				<div class='row'>
					<div>
						{{ form_row(search_Form.keyword) }}
					</div>
					<div>
						{{ form_row(search_Form.type) }}
					</div>
					<div>
						{{ form_row(search_Form.startDate) }}
					</div>
					<div>
						{{ form_row(search_Form.endDate) }}
					</div>
					<div class='offset-6 col-5'>
						{{ form_row(search_Form.search) }}
					</div>           
				</div>      
			</div>
			<div class='col-9'>

				{# Affichage des r√©sultats#}
			<div class='container-fluid mt-3'>
					<div class="row ms-5">
						<div class="rounded-4 bg-light border-2 me-2 mb-2">
							<table class="table table-borderless mt-2 table-light table-hover ">
								<thead>
									<tr class='row'>
										<th class='col ps-5'>Date</th>
										<th class='col'>Motif</th>
										<th class='col'>Amount</th>
									</tr>
								</thead>
								<tbody>
									{% for type in types %}
										<tr class='row'>
											<td class='col ps-5'>{{type.executedAt|date('d-m-Y')}}</td>
											<td class='col'>{{type.motif}}</td>
											<td class='col'>{{type.amount}}</td>
										</tr>
									{% endfor %}
								</tbody>
							</table>
						</div>
					</div>
				</div>
				{# Essai #}
			</div>
		</div>
	</div>
	{{ form_end(search_Form) }}
{% endblock %}
