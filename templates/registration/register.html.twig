{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}

{ 
    <div class='container mt-4'>
		<div class='row justify-content-center '>
			<div class='col-8'></div>	
			<div class='col-4 px-5 border rounded-5 border-2'>                
                {{ form_errors(registrationForm) }}
            
                {{ form_start(registrationForm) }}
                    <h3 class='mb-3 font-weight-normal mt-2 text-center' >Register</h3>
                    {{ form_row(registrationForm.design) }}
                    {{ form_row(registrationForm.username) }}
                    {{ form_row(registrationForm.city) }}
                    {{ form_row(registrationForm.plainPassword, {
                        label: 'Password'
                    }) }}
                    {{ form_row(registrationForm.confirmMyRegistration) }}

                <div class= 'container mt-2 mb-3'>
                    <div class = 'row'>   
                        <button type="submit" class="btn btn-lg btn-success">
                            Sign up
                        </button>
                        <a href='{{ path('app_login') }}' style='color: white' class="signIn text-center mt-1">
                            I already have an account
                        </a>
                    </div>
                </div>
            

                {{ form_end(registrationForm) }}
			</div>	
			<div class='col-1'>

			</div>		
		</div>
    </div>
{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('assets/styles/login.css') }}"> 
    <style>
        .signIn:hover {
            text-decoration: underline;
        }
    </style>
{% endblock %}
