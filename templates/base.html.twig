<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title>{% block title %}CFM{% endblock %}</title>
		<link rel="icon" href="{{ asset('images/icon.jpeg') }}">

		<!-- Stylesheets -->
		<link rel="stylesheet" href="{{ asset('assets/styles/lineicons/lineicons.css') }}">
		<link rel="stylesheet" href="{{ asset('assets/styles/bootstrap/bootstrap.min.css') }}"> 
		<link rel="stylesheet" href="{{ asset('assets/styles/styles.css') }}">
		{% block stylesheets %}{% endblock %}
		{% block sidebarStyle %}{% endblock %}
	</head>
	<body>
		{% block body %}
			<div class="wrapper d-flex">
				{% block sidebar %}
					{% include 'partials/_sidebar.html.twig' %}
				{% endblock %}
				{% block dashboard %}
					<div class="main d-flex flex-column main-content">
						{% include 'partials/_toogle.html.twig' %}
						{% include 'partials/_flash.html.twig' %}
						{% block main %}{% endblock %}
					</div>
				{% endblock %}
			</div>
		{% endblock %}
		{# Chart #}
			<script src="{{ asset('assets/scripts/chart.umd.js') }}"></script>
			{% block script %}{% endblock %}
		{# Chart #}
		<script src="{{ asset('assets/scripts/bootstrap/bootstrap.bundle.min.js') }}"></script>
		<script src="{{ asset('assets/scripts/scripts.js') }}"></script>
	</body>
</html>
